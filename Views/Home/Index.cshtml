<div class="container px-5  my-5">
    <h1 class="text-center text-uppercase enchantedLand">Our Best Arts</h1>
    @{
        int artNo = 1; foreach (var art in Model.TopNSoldArtsVm.TopNSoldArts)
        {
            <hr class="featurette-divider">
            <div class="row featurette best-item">
                <div class="col-md-6 @(artNo%2==0 ? "order-md-2 d-flex align-items-lg-end" : "d-flex align-items-start")   d-flex justify-content-center flex-column">
                    <h1 class="featurette-heading fw-normal lh-1 text-capitalize enchantedLand">@art.ArtName, <span class="fs-3 text-body-secondary poppins">@art.ArtistName</span></h1>
                    <h5><span class="fw-bold">Sold Units:</span> @art.TotalUnitSold</h5>
                </div>
                <div class=" col-md-6 @(artNo%2==0 ? "order-md-1" : "d-flex justify-content-end")">
                    <img src="/UploadImage/@art.ArtImage" alt="Alternate Text" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid rounded-5" width="300" height="300" preserveAspectRatio="xMidYMid slice" data-bs-toggle="modal" data-bs-target="#PreviewModal" data-bs-image="/UploadImage/@art.ArtImage" />
                </div>
            </div>

            if (artNo == 3)
            {
                break;
            }
            artNo++;
        }
    }
</div>


<div class="position-relative overflow-hidden p-3 p-md-5 text-center bg-body-tertiary mt-5 border-light rounded-2 my-5 " style="box-shadow: 0 0.5rem 5rem 3px #00000026, inset 0 0 160px black !important;">
