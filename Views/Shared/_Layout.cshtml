<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Galleria</title>
  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
  <link rel="stylesheet" href="(link unavailable)">
</head>
<body>
  <div class="wrapper">
    <nav class="navbar navbar-expand-lg fixed-top rounded border shadow mt-2 py-2" style="width:90%;margin-left:5%">
      <div class="container-fluid">
        <a class="navbar-brand fw-semibold carolingia" href="/Home/Index">Galleria</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample09" aria-controls="navbarsExample09" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExample09">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Art/Arts">Arts</a>
            </li>
            @if (User.IsInRole("Admin")) {
            <li class="nav-item">
              <a class="nav-link" href="/Genre/Genres">Genres</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Stock/Stocks">Stocks</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/AdminOperations/AllOrders">Orders</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Report/TopFiveSellingArts">Top Selling</a>
            </li>
            }
          </ul>
          <partial name="_LoginPartial" />
        </div>
      </div>
    </nav>
    <div class="container-fluid" style="margin-top:75px">
      <div class="my-2">
        <partial name="_Notifications" />
      </div>
      @RenderBody()
    </div>
    <footer class="py-3 mt-4 bg-dark mb-0 shadow-lg">
      <ul class="nav justify-content-center border-bottom pb-3 mb-3">
        <li class="nav-item"><a asp-action="Index" asp-controller="Home" class="nav-link px-2 text-light">Home</a></li>
        <li class="nav-item"><a asp-action="Arts" asp-controller="Art" class="nav-link px-2 text-light">Arts</a></li>
      </ul>
      <p class="text-center text-light ">&copy; 2024 <span class="carolingia"> Galleria</span>, Inc</p>
    </footer>
  </div>
  <div class="modal fade" id="PreviewModal">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-body" style="max-width:max-content">
        <p class="position-absolute fs-1" style="right:30px;top:10px;font-weight:bold!important;color:#fff!important" data-bs-dismiss="modal">&times;</p>
        <img src="" class="h-100" id="previewModalImg" alt="Alternate Text" data-bs-dismiss="modal" />
      </div>
    </div>
  </div>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/jquery-3.4.1.min.js"></script>
  <script src="/js/script.js"></script>
  <script> loadCartCount() </script>
</body>
</html>
@await RenderSectionAsync("Scripts", required: false)


